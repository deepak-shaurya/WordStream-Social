<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 min-h-screen max-h-auto text-white">
    <nav class="bg-gray-800 p-4 flex justify-between items-center">
        <h1 class="text-2xl">Dashboard</h1>
        <a class="bg-red-500 px-5 hover:bg-red-700  py-2 rounded-lg" href="/logout">Logout</a>
    </nav>
    <div class=" p-2 h-auto flex gap-2 mt-3">
        <div class="w-1/3 h-auto br-2 bg-gray-800 p-5 rounded-lg flex flex-col">
            <div class=" gap-2 mb-3">
                <div class="flex gap-2 mb-3">
                    <div class="w-40 h-40 rounded-full  overflow-hidden ">
                        <img class=" w-full h-full object-cover " src="/image/uplodes/<%=user.profilepic%>" alt="">
                    </div>
                    <div class=" h-40 flex flex-col-reverse">
                        <a class="bg-yellow-500 h-10 text-lg px-3 py-2 hover:bg-yellow-700 rounded-full" href="/dashboard/uplode">Uplode</a>
                    </div>
                </div>
                
                <h1 class="text-2xl"> Hey, <%= user.name %> </h1>
                <h3 class="text-blue-200">@<%=user.username%></h3>
            </div>
            <div class="post-container flex flex-col gap-4 mt-40">
                <% user.posts.reverse().forEach(function(post) { %>
                    <div class="post bg-gray-900 p-5 h-auto rounded-lg">
                        <h3 class="text-blue-200 mb-2">@<%= user.username %></h3>
                        <h1 class="text-xl mb-5"><%= post.content %></h1>
                        <div class="flex items-center justify-between">
                            <a class="bg-blue-500 hover:bg-blue-700 px-3 py-1 rounded text-white" href="/like">Like</a>
                            <a class="bg-gray-500 hover:bg-gray-700 px-3 py-1 rounded text-white" href="/edit">Edit</a>
                        </div>
                    </div>
                <% }) %>
            </div>
            
        </div>
        <div class="w-2/3 ">
            <div class=" flex flex-col h-70  rounded-lg bg-gray-800 w-full p-7">
                <h1 class="text-2xl p-4 mb-2 "> Create Posts</h1>
                <form class="w-full flex flex-col gap-4 " action="/post" method="post" class="flex flex-col p-5">
                    <textarea name="content" placeholder="What's on your mind today" class="bg-transparent w-full border-2 h-40 rounded-lg resize-none outline-none p-3 text-lg"></textarea>
                    <input type="submit" class="bg-blue-500 w-20 hover:bg-blue-700  px-2 py-2 rounded-lg">
                </form>
            </div>

            <div class="feeds mt-5">
                <h1 class="text-2xl p-4 mb-2 "> Feeds</h1>
                <div class="post-container flex flex-col gap-4">
                    <% posts.reverse().forEach(function(post) { %>
                        <div class="post bg-gray-800 p-5 h-auto rounded-lg">
                            <div class="w-full flex justify-between">
                                <h3 class="text-blue-200 mb-2">@<%= post.user.username %></h3>
                                <h3 class="text-blue-200 mb-2"><%= post.date %></h3>
                            </div>
                            
                            <h1 class="text-xl mb-5"><%= post.content %></h1>
                            <div class="flex items-center justify-between">
                                <a class="bg-blue-500 hover:bg-blue-700 px-3 py-1 rounded text-white" href="/like">Like</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

        </div>
        
    </div>
    
    
</body>
</html>